            <h2>Canvas Image</h2> 
            <figure>
                <canvas id="myCanvas" width="200" height="100">
                    Your browser does not support the HTML5 canvas tag.
                </canvas>
             
                <script>
        var c = document.getElementById("myCanvas");
        var ctx = c.getContext("2d");
        ctx.beginPath(0,0);
        ctx.arc(95,50,40,0,2*Math.PI);
        ctx.moveTo(20, 20);
        ctx.lineTo(200, 100);
        ctx.stroke();
        </script>      
              
                <figcaption>
                    <strong>FIGURE 1:</strong> Circle with a line through it    
                </figcaption>
  </figure>      
        
